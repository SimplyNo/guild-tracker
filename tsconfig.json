{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
        // "strict": true
    },
    "include": [
        "packages/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}